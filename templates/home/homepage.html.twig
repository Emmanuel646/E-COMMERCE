{% extends 'base.html.twig' %}


{% block body %}
         
    <div class="container"> 
        <section class="row d-flex justify-content-center">
            {% for category in categories %}
                {% if category.parent == null %}
                    <div class="col-12" style="height:70px; margin-top:5px">
                        <h2 class="d-flex justify-content-center p-1">{{ category.name }}</h2>
                    </div>
                {% else %}
                    <div class="col-auto mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h3 class="card-title d-flex justify-content-center">{{ category.name }}</h3>
                                {% if category.slug == 'clavier' %}
                                <div class="row">
                                    <div class="image">
                                        <img src="../assets/images/clavier108azerty.jpg">
                                    </div>
                                    <div class="d-flex justify-content-end">
                                        <a href="/clavier" class="btn d-flex justify-content-center my-1" id="inscript">Voir les produits</a>
                                    </div>
                                </div>
                                {% elseif category.slug == 'ecran' %}
                                <div class="row">
                                    <div class="image">
                                        <img src="../assets/images/ecranlcd.jpg">
                                    </div>
                                    <div class="d-flex justify-content-end">
                                        <a href="/ecran" class="btn d-flex justify-content-center my-1" id="inscript">Voir les produits</a>
                                    </div>
                                </div>
                                {% elseif category.slug == 'souris'%}
                                <div class="row">
                                    <div class="image">
                                        <img src="../assets/images/souris.jpg">
                                    </div>
                                    <div class="d-flex justify-content-end">
                                        <a href="/souris" class="btn d-flex justify-content-center my-1" id="inscript">Voir les produits</a>
                                    </div>
                                </div>
                                {% elseif category.slug == 'arcade'%}
                                <div class="row">
                                    <div class="image">
                                        <img src="../assets/images/arcade.jpg">
                                    </div>
                                    <div class="d-flex justify-content-end">
                                        <a href="/arcade" class="btn d-flex justify-content-center my-1" id="inscript">Voir les produits</a>
                                    </div>
                                </div>
                                {% elseif category.slug == 'course'%}
                                <div class="row">
                                    <div class="image">
                                        <img src="../assets/images/course.jpg">
                                    </div>
                                    <div class="d-flex justify-content-end">
                                        <a href="/course" class="btn d-flex justify-content-center my-1" id="inscript">Voir les produits</a>
                                    </div>
                                </div>
                                {% elseif category.slug == 'sport'%}
                                <div class="row">
                                    <div class="image">
                                        <img src="../assets/images/sport.jpg">
                                    </div>
                                    <div class="d-flex justify-content-end">
                                        <a href="/sport" class="btn d-flex justify-content-center my-1" id="inscript">Voir les produits</a>
                                    </div>
                                </div>
                                {% else %}
                                <a href="#" class="btn btn-primary">Voir les produits</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </section>
    </div>

{% endblock %}
