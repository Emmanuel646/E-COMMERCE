{% block header %}
<div class="container">
    <div class="col-12">
        <h1 class="d-flex justify-content-center">INFO - JEUX 64</h1>
        <h2 class="d-flex justify-content-center bg-transparent">INFORMATIQUE ET JEUX VIDEOS</h2>
        <main>
            <div class="diapo">
                <div class="elements">
                    <div class="element">
                        <img src="assets/images/arcade.jpg" alt="arcade">
                        <div class="caption"><h3>Arcade</h3></div>
                    </div>
                    <div class="element">
                        <img src="assets/images/course.jpg" alt="course">
                        <div class="caption"><h3>Course</h3></div>
                    </div>
                    <div class="element">
                        <img src="assets/images/sport.jpg" alt="sport">
                        <div class="caption"><h3>Sport</h3></div>
                    </div>
                    <div class="element">
                        <img src="assets/images/clavier108azerty.jpg" alt="clavier">
                        <div class="caption"><h3>Claviers</h3></div>
                    </div>
                    <div class="element">
                        <img src="assets/images/ecranlcd.jpg" alt="ecran">
                        <div class="caption"><h3>Ecrans</h3></div>
                    </div>
                    <div class="element">
                        <img src="assets/images/souris.jpg" alt="souris">
                        <div class="caption"><h3>Souris</h3></div>
                    </div>
                </div>
                <!-- Flèche -->
                <i id="nav-gauche" class="bg-dark carousel-control-prev-icon"></i>
                <i id="nav-droite" class="bg-dark carousel-control-next-icon"></i>
            </div>
        <main>
        <p class="d-flex justify-content-center">Bienvenue notre site d'informatique et jeux vidéo</p>
    </div>
    <div class="user-connexion text-center">
        {% if app.user %}
            <div class="mb-3 text-center">
                Bonjour, {{ app.user.lastname }} {{ app.user.firstname }} Vous êtes connecté(e) !
            </div>
        {% endif %}
    </div>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Info - Jeux 64</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path('home') }}">Accueil</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Produits
                            </a>
                            <ul class="dropdown-menu">
                                <li class="text-center text-primary">Informatique</li>
                                <li><a class="dropdown-item" href="/clavier">Claviers</a></li>
                                <li><a class="dropdown-item" href="/ecran">Ecrans</a></li>
                                <li><a class="dropdown-item" href="/souris">Souris</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li class="text-center text-primary">Jeux</li>
                                <li><a class="dropdown-item" href="/arcade">Arcade</a></li>
                                <li><a class="dropdown-item" href="/course">Course</a></li>
                                <li><a class="dropdown-item" href="/sport">Sport</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/contact">Contact</a>
                        </li>
                    </ul>
                    <img class=" me-auto" src="https://www.gifsanimes.com/data/media/519/bonne-annee-image-animee-0023.gif" border="0" alt="bonne-annee-image-animee-0023" style="height:30px; width:100px" />
                    <img class=" me-auto" src="https://www.gifsanimes.com/data/media/519/bonne-annee-image-animee-0023.gif" border="0" alt="bonne-annee-image-animee-0023" style="height:30px; width:100px" />
                    <img class=" me-auto" src="https://www.gifsanimes.com/data/media/519/bonne-annee-image-animee-0023.gif" border="0" alt="bonne-annee-image-animee-0023" style="height:30px; width:100px" />
                    <form class="d-flex align-items-center" role="search">
                    {% if app.user %}
                        <a class="btn btn-info me-2 w-auto" type="button" href="/add/product">Ajouter un produit</a>
                        <a class="btn btn-danger me-2" type="button" href="/logout" onclick="disconnectConfirme()">Se Déconnecter</a>
                    {% else %}
                        <a class="btn btn-success me-2" type="button" id="inscript" href="/inscription">S'inscrire</a>
                        <a class="btn btn-success d-flex-inline me-2" type="button" href="/connexion">Se connecter</a>
                    {% endif %}
                    </form>
                </div>
            </div>
        </nav>
    </div>
</div>

{% endblock %}